<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <servlet>
        <servlet-name>eStock</servlet-name>
        <servlet-class>stockservlet.eStock</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>imageUpload</servlet-name>
        <servlet-class>stockservlet.imageUpload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>imageView</servlet-name>
        <servlet-class>stockservlet.imageView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sImgage</servlet-name>
        <servlet-class>stockservlet.sImgage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StockCSV</servlet-name>
        <servlet-class>stockservlet.StockCSV</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>stockservlet.NewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>eStock</servlet-name>
        <url-pattern>/eStock</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>imageUpload</servlet-name>
        <url-pattern>/imageUpload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>imageView</servlet-name>
        <url-pattern>/imageView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sImgage</servlet-name>
        <url-pattern>/sImgage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StockCSV</servlet-name>
        <url-pattern>/StockCSV</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>indexq.html</welcome-file>
        </welcome-file-list>
    <ejb-local-ref>
        <ejb-ref-name>SControlBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local-home>stockcontrolsession.SControlLocalHome</local-home>
        <local>stockcontrolsession.SControlLocal</local>
        <ejb-link>E-stockControl-ejb.jar#SControlBean</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>ReportsBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local-home>stockcontrolsession.ReportsLocalHome</local-home>
        <local>stockcontrolsession.ReportsLocal</local>
        <ejb-link>E-stockControl-ejb.jar#ReportsBean</ejb-link>
    </ejb-local-ref>
    </web-app>
